<div class="bg-yellow-50 rounded-lg mb-6 p-1">
  <div>
    <%= image_tag(url_for(@movie.poster), alt: "Poster for #{@movie.title}") %>
  </div>
  <h4 class="text-xl font-semibold tracking-wide text-center"><i><%= link_to(@movie.title, @movie) %></i></h4>
  <% if @movie.recommended? %>
    <p class="text-sm text-center">
      <%= link_to("Recommended #{@movie.recommendations.count} #{'time'.pluralize(@movie.recommendations.count)}", @movie) %>
    </p>
  <% end %>
  <ul class="flex space-x-2">
    <li class="text-xs border border-black text-center p-1">
      <%= link_to("IMDb", "https://www.imdb.com/title/#{@movie.imdb_id}") if @movie.imdb_id %>
    </li>
    <li class="text-xs border border-black text-center p-1">
      <%= link_to("Letterboxd", "https://letterboxd.com/film/#{@movie.letterboxd_id}") if @movie.letterboxd_id %>
    </li>
  </ul>
</div>
