<i><%= link_to(@movie.title, @movie) %></i>
<%= link_to("IMDb", "https://www.imdb.com/title/#{@movie.imdb_id}") if @movie.imdb_id %>
<%= link_to("Letterboxd", "https://letterboxd.com/film/#{@movie.letterboxd_id}") if @movie.letterboxd_id %>
<% if Recommendation.exists?(movie: @movie) %>
(<%= Recommendation.where(movie: @movie).count %>)
<% end %>
<% if @movie.poster.attached? %>
<%= image_tag url_for(@movie.poster) %>
<% end %>
