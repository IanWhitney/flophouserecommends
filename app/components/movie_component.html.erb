<% if @movie.poster.attached? %>
  <%= image_tag(url_for(@movie.poster), alt: "Poster for #{@movie.title}") %>
<% end %>
<div>
  <i><%= link_to(@movie.title, @movie) %></i>
</div>
<ul class="flex">
  <li><%= link_to("IMDb", "https://www.imdb.com/title/#{@movie.imdb_id}") if @movie.imdb_id %></li>
  <li><%= link_to("Letterboxd", "https://letterboxd.com/film/#{@movie.letterboxd_id}") if @movie.letterboxd_id %></li>
  <% if @movie.recommended? %>
  <li>(<%= link_to(@movie.recommendations.count, @movie) %>)</li>
  <% end %>
</ul>
